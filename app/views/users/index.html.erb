<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/author', book:@book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h3>Users</h3>
      <table class="table table-hover table-inverse">
        <thead>
          <tr class="border-bottom">
            <th class="py-2">image</th>
            <th class="py-2">name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td class="py-2"><%= image_tag user.get_profile_image(75,75) %></td>
            <td class="text-break py-2"><%= user.name %></td>
            <td class="py-2"><%= link_to "Show", user_path(user.id) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>