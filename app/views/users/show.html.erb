<%= render 'books/author', book:@book %>

<h3>Books</h3>
<table>
  <thead>
    <tr>
      <th colspan="1"></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= link_to (image_tag book.user.get_profile_image(100,100)), user_path(@user.id) %></td>
      <td><%= link_to (book.title), book_path(book.id) %></td>
      <td><%= book.body %></td>
    </tr>
    <% end %>
  </tbody>
</table>
