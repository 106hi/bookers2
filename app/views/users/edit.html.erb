<div class="container px-5 px-sm-0">
  <div class="row justify-content-center">
    <div class="col-lg-6">
      <h3>User info</h3>
      <% if @user.errors.any? %>
        <%= @user.errors.count %> error prohibited this obj from being saved:
        <ul>
          <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <%= form_with model: @user do |f| %>
        <div class="form-group">
          <label for="inputName">Name</label>
          <%= f.text_field :name, id:"inputName", class: 'form-control' %>
        </div>
        <div class="form-group">
          <label for="inputImage">Image</label>
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*", class: 'form-control-file' %>
        </div>
        <div class="form-group">
          <label for="inputIntroduction">Introduction</label>
          <%= f.text_area :introduction, id:"inputIntroduction", class: 'form-control' %>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-secondary btn-sm">Update User</button>
        </div>
      <% end %>
    </div>
  </div>
</div>

